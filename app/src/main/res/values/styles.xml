<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loginEtUN">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Username</item>
        <item name="android:ems">10</item>
    </style>

    <style name="loginEtPwd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:ems">10</item>
    </style>

    <style name="loginBtn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sign In</item>
    </style>

    <style name="signupEtUN">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Username</item>
    </style>

    <style name="signupEtPwd">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="signupEtConfPwd">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Confirm Password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="signupBtn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sign Up</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="homesigninBtn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sign In</item>
        <item name="android:onClick">signIn</item>
    </style>

    <style name="homesignupBtn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sign Up</item>
    </style>

</resources>

